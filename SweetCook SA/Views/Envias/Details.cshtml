            <dd>
                @Html.DisplayFor(model => model.TablaSucursal.NombreTienda)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NombreEnvio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreEnvio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CantidadEnvia)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CantidadEnvia)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Fecha)
