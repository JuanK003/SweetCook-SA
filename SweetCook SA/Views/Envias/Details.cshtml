            </dt>

            <dd>
                @Html.DisplayFor(model => model.TablaDepartamentoRecibe.NombreDepartamentoRecibe)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TablaProducto.NombreProducto)
